import iconInstagram from "../assets/images/icons/Instagram.svg";
import iconArrowRight from "../assets/images/icons/arrow_right.svg";
---

<Layout title="Pure Forged Wheels">
	<nav class="pa-2 fixed w-full top-0 z-10 bg-[#090707]">
		<div
			class="relative container mx-auto flex items-center gap-4 flex-wrap pb-14 justify-center md:pb-0"
		>
			<Image
				class="h-14 w-auto inline-block"
				src={logo}
				loading="lazy"
				alt="Pure Forged Wheels"
			/>
			<div class="flex justify-center flex-1 gap-4 whitespace-nowrap">
				<a href="#featured">Home</a>
				<a href="#about">About us</a>
				<a href="#wheels">Wheels</a>
				<a href="#gallery">Gallery</a>
				<a href="#dealers">Dealers</a>
			</div>

			<a
				class="bg-primary color-primary-foreground px-4 py-2 rounded-md inline-flex items-center gap-2 justify-center absolute bottom-2 left-50% translate-x--50% md:static"
				href="#contact"
			>
				<span>Get in touch</span>
				<Image class="h-5" src={iconArrowRight} loading="lazy" alt="" />
			</a>
		</div>
	</nav>
	<section class="min-h-100vh relative overflow-hidden" id="featured">
		<div class="flex-1 absolute inset-0 flex items-center min-h-full">
			<div class="container mx-auto px-8">
				<div class="max-w-480px">
					<h1 class="text-display mb-4">
						Elite <br /> CUSTOM <br /> WHEELS
					</h1>
					<p class="mb-8 max-w-85">
						Join the elite sports car community with wheels designed
						for passion, precision, and performance.
					</p>
					<a
						class="b-1 b-foreground color-foreground px-4 py-2 rounded-md inline-flex items-center gap-2 justify-center"
						href="#wheels">Explore Custom Wheels</a
					>
				</div>
			</div>
		</div>
		<Image
			class="h-100vh min-w-15/24 max-w-full object-cover w-auto float-right"
			src={featuredImage}
			loading="lazy"
			alt=""
		/>
	</section>

	<section class="min-h-50vh pa-8" id="about">
		<div class="container mx-auto text-center">
			<h2 class="color-muted2">About Us</h2>
			<h3 class="text-title-1 my-8">
				Driven by Passion, Built with Precision.
			</h3>
			<p class="text-body-md color-muted max-w-168 mx-auto">
				At Pure Wheels, we understand that your car is more than just a
				machine.<br />—its an extension of your lifestyle. We create
				wheels that balance aesthetics with safety and quality for the
				perfect performance on every ride.
			</p>
		</div>
	</section>

	<section class="min-h-50vh pa-8" id="wheels">
