<style>
	.navbar {
		background-image: linear-gradient(
			to bottom,
			hsl(from #151515 h s calc(l * 2.5%)),
			#151515
		);
	}
	.grid-gallery {
		display: grid;
	}

	.dealers {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		place-content: center;
		justify-content: space-between;
	}
</style>
