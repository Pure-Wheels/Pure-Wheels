---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";

import Carousel from "../components/carousel.vue";

import featuredImage from "../assets/images/featured.jpeg";
import logo from "../assets/images/logo.png";

import gallery1 from "../assets/images/gallery/1.png";
import gallery2 from "../assets/images/gallery/2.jpeg";
import gallery3 from "../assets/images/gallery/3.jpeg";
import gallery4 from "../assets/images/gallery/4.jpeg";
import gallery5 from "../assets/images/gallery/5.jpeg";

import iconInstagram from "../assets/images/icons/Instagram.svg";
import iconArrowRight from "../assets/images/icons/arrow_right.svg";
import type { ImageMetadata } from "astro";

const carousel = Object.entries(
	import.meta.glob<{ default: ImageMetadata }>(
		"../assets/images/carousel/*.jpeg",
		{
			eager: true,
		},
	),
).map(([name, image]) => {
	name = name.replace("../assets/images/carousel/", "").replace(".jpeg", "");
	return {
		image: image.default,
		name,
	};
});
