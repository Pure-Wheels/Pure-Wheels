---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-16px text-body">
	<head>
		<meta charset="UTF-8" />
		<!-- SEO -->
		<meta
			name="description"
			content="Pure Forged Wheels offers top-quality, custom wheels for car enthusiasts who value performance, safety, and personalized style. Our premium forged wheels are crafted with precision and innovation, perfect for modern sports cars and luxury vehicles. Whether you're upgrading your ride for track performance or personal expression, Pure Forged Wheels combines durability, agility, and unique design for a driving experience like no other."
		/>
		<meta
			name="keywords"
			content="wheels,forged wheels,custom wheels,performance wheels,luxury wheels,sports car wheels,car wheels,Pure Forged Wheels"
		/>
		<meta name="author" content="Pure Forged Wheels" />
		<meta name="robots" content="index, follow" />
		<meta name="theme-color" content="#000000" />

		<!-- Social Media -->
		<meta property="og:title" content={title} />
		<meta
			property="og:description"
			content="Pure Forged Wheels offers top-quality, custom wheels for car enthusiasts who value performance, safety, and personalized style. Our premium forged wheels are crafted with precision and innovation, perfect for modern sports cars and luxury vehicles. Whether you're upgrading your ride for track performance or personal expression, Pure Forged Wheels combines durability, agility, and unique design for a driving experience like no other."
		/>
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://pureforgedwheels.com" />
		<meta property="og:image" content="/assets/images/og-image.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Pure Forged Wheels" />
		<meta property="og:locale" content="en_US" />

		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			@font-face {
				font-family: "Akira Expanded";
				font-style: normal;
				font-weight: 800;
				font-display: swap;
				src: url("/assets/fonts/Akira Expanded.otf") format("opentype");
			}
			@font-face {
				font-family: "Aileron";
				font-style: normal;
				font-weight: 400;
				font-display: swap;
				src: url("/assets/fonts/Aileron.otf") format("opentype");
			}
		</style>
	</head>
	<body class="bg-background color-foreground">
		<slot />
	</body>
</html>
